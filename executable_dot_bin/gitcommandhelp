#!/bin/bash
echo -e ""
echo -e "${Purple}Git Alias Help${NC}"
echo -e "${Purple}----------------------------------------------------${NC}"
echo -e "${Yellow}Alias        Cmd            Description${NC}"
echo -e "  ${Cyan}a          ${LightGray}add                  ${White}add${NC}"
echo -e "  ${Cyan}aa         ${LightGray}add -all             ${White}add everything${NC}"
echo -e "  ${Cyan}b          ${LightGray}branch -v            ${White}branch (verbose)${NC}"
echo -e "  ${Cyan}c          ${LightGray}commit -m            ${White}commit with message${NC}"
echo -e "  ${Cyan}ca         ${LightGray}commit --amend       ${White}amend the previous commit${NC}"
echo -e "  ${Cyan}co         ${LightGray}checkout             ${White}checkout${NC}"
echo -e "  ${Cyan}nb         ${LightGray}checkout -b          ${White}create and switch to a new branch${NC}"
echo -e "  ${Cyan}d          ${LightGray}diff                 ${White}diff unstaged changes${NC}"
echo -e "  ${Cyan}dc         ${LightGray}diff --cached        ${White}diff staged changes${NC}"
echo -e "  ${Cyan}last       ${LightGray}diff HEAD^           ${White}diff last committed change${NC}"
echo -e "  ${Cyan}l          ${LightGray}log                  ${White}log --graph --date=short${NC}"
echo -e "  ${Cyan}changelog  ${LightGray}log                  ${White}Outputs a MD format changelog ${NC}"
echo -e "  ${Cyan}r          ${LightGray}remote -v            ${White}show remotes (verbose)${NC}"
echo -e "  ${Cyan}unstage    ${LightGray}reset HEAD           ${White}remove files from index${NC}"
echo -e "  ${Cyan}uncommit   ${LightGray}reset --soft HEAD^   ${White}go back before last commit${NC}"
echo -e "  ${Cyan}wipe       ${LightGray}reset --hard HEAD    ${White}Hard reset to the latest commit${NC}"
echo -e "  ${Cyan}filelog    ${LightGray}log -u               ${White}show changes to a file${NC}"
echo -e "  ${Cyan}mt         ${LightGray}mergetool            ${White}fire up the merge tool${NC}"
echo -e "  ${Cyan}deltag     ${LightGray}tag                  ${White}delete a LOCAL tag (tag -d)${NC}"
echo -e "  ${Cyan}pushtag    ${LightGray}push origin:         ${White}push a tag or tag removal to remote${NC}"
echo -e "  ${Cyan}delbr      ${LightGray}push origin --delete ${White}delete a REMOTE branch${NC}"
echo -e "  ${Cyan}ss         ${LightGray}stash                ${White}stash changes${NC}"
echo -e "  ${Cyan}sl         ${LightGray}stash list           ${White}list stashes${NC}"
echo -e "  ${Cyan}sa         ${LightGray}stash apply          ${White}apply stash (restore changes)${NC}"
echo -e "  ${Cyan}sd         ${LightGray}stash drop           ${White}drop stashes (destory changes)${NC}"
echo -e "  ${Cyan}s          ${LightGray}status               ${White}status${NC}"
echo -e ""
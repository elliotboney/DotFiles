#!/bin/bash

# Post-installation setup and optimization
# Runs after dotfiles are applied

set -e

echo "ğŸ”§ Setting up dotfiles environment..."

# Create necessary directories
mkdir -p ~/.cache ~/.local/bin ~/.config

# Development environment setup
echo "ğŸ’» Setting up development environment..."

# Create common development directories
mkdir -p ~/Code ~/Projects ~/Development

# Set up git-delta pager (if not already configured)
if command -v delta >/dev/null 2>&1 && ! git config --get core.pager >/dev/null 2>&1; then
    git config --global core.pager delta
    git config --global interactive.diffFilter "delta --color-only"
    git config --global delta.navigate true
    git config --global merge.conflictstyle diff3
    git config --global diff.colorMoved default
fi

{{- if eq .chezmoi.os "darwin" }}
# macOS development setup
echo "ğŸ Setting up macOS development tools..."

# Install Xcode command line tools if not present
if ! xcode-select -p >/dev/null 2>&1; then
    echo "ğŸ“± Installing Xcode command line tools..."
    xcode-select --install || true
fi

# Set up dotfiles environment variables
echo "export DOTPATH=\"${HOME}/.dotfiles\"" > ~/.dotfilelocation
echo "âœ… Dotfiles location configured"

# Personal machine setup
echo "ğŸ  Setting up personal machine configuration..."

# Set up personal directories
mkdir -p ~/Documents/Personal ~/Downloads/Software

{{- if eq .chezmoi.os "darwin" }}
# macOS personal settings
defaults write com.apple.dock autohide -bool false
defaults write com.apple.finder ShowPathbar -bool true
defaults write com.apple.finder ShowStatusBar -bool true
killall Dock Finder 2>/dev/null || true

# Source new shell configuration
echo "ğŸš Reloading shell configuration..."
if [[ -f ~/.zshrc ]]; then
    zsh -c "source ~/.zshrc" 2>/dev/null || true
fi

# Final health check
echo "ğŸ” Performing health check..."
command -v git >/dev/null && echo "âœ… Git available"
command -v zsh >/dev/null && echo "âœ… Zsh available"  
command -v starship >/dev/null && echo "âœ… Starship available"

command -v nvim >/dev/null && echo "âœ… Neovim available"
command -v rg >/dev/null && echo "âœ… Ripgrep available"
command -v fd >/dev/null && echo "âœ… fd available"

echo ""
echo "ğŸ‰ Dotfiles setup complete!"
echo "ğŸ’¡ Restart your terminal or run 'source ~/.zshrc' to activate changes"

{{- end }}
{{- end }}
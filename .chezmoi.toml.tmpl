{{- $personal := promptBoolOnce . "personal" "Personal machine? (true/false)" -}}
{{- $work := promptBoolOnce . "work" "Work machine? (true/false)" -}}
{{- $server := promptBoolOnce . "server" "Server machine? (true/false)" -}}
{{- $development := promptBoolOnce . "development" "Development machine? (true/false)" -}}
{{- $hostname := .chezmoi.hostname -}}
{{- $email := promptStringOnce . "email" "Email address" -}}
{{- $github_username := promptStringOnce . "github_username" "GitHub username" -}}

# Encryption with key stored in Lastpass
encryption = "age"
[age]
    identity = "~/.config/chezmoi/key.txt"
    recipient = "age1htl2m2qx7kzeg9ezqpq6cdfmtdgfyay9wvqv6n6qx3j0patvtd9s72l0j7"

[data]
    personal = {{ $personal }}
    work = {{ $work }}
    server = {{ $server }}
    development = {{ $development }}
    hostname = "{{ $hostname }}"
    email = "{{ $email }}"
    github_username = "{{ $github_username }}"

# Git configuration
[git]
    autocommit = true
    autopush = false